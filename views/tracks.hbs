<h1>Album tracks</h1>

{{# each items}}
    {{# if this.preview_url}}
    <figure>
        <figcaption>{{this.name}}:</figcaption>
        <audio
            controls
            src='{{this.preview_url}}'>
                Your browser does not support the
                <code>audio</code> element.
        </audio>
    </figure>
    {{#else }}
    {{/else}}
    {{/if}}
{{/each}}
